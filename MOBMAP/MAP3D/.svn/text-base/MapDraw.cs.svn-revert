                            //draw frame
                //            drawFrame();
                            //draw terrain 3D
                //            drawTerrain3D();
                            //draw track
                 //           drawTrack();
                 //       }
               //     } break;
                case Form1.DrawStatus.DRAW_TERRAIN_3D_POINTS:
                    {
                        if (meshTerrain != null && meshTerrain.VertexBuffer != null
                            && meshTerrain.IndexBuffer != null)
                        {
                            //draw frame
                            drawFrame();
                            //draw terrain 3D
                            drawTerrain3D();
                            //draw points
                            drawTrackPoint();
                        }
                    } break;
                
                case Form1.DrawStatus.DRAW_TERRAIN_2D:
                    {
                        //draw frame
                        drawFrame();
                        //draw terrain 2D
                         drawTerrain2D();
                    } break;
                case Form1.DrawStatus.DRAW_TERRAIN_2D_POINTS:
                    {
                        //draw frame
